<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xhwl.xhwlownerapp.activity.View.UserInfoView.BasicsInfo.SetSexActivity">
    <include layout="@layout/top_layout"/>
    <RadioGroup
        android:id="@+id/modify_sex_radio"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@drawable/table_btn_bg"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/modify_sex_men"
            android:layout_marginLeft="10px"
            android:text="男"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/login_line"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/modify_sex_women"
            android:layout_marginLeft="10px"
            android:text="女"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/login_line"/>
    </RadioGroup>
    <Button
        android:id="@+id/modify_sex_submit"
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="50px"
        android:background="@drawable/introduce_btn_bg"
        android:gravity="center"
        android:text="确定"
        android:textSize="36px"
        android:textColor="@color/white"/>
</com.zhy.autolayout.AutoLinearLayout>
