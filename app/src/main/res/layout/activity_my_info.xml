<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xhwl.xhwlownerapp.activity.View.UserInfoView.BasicsInfo.MyInfoActivity">
    <include layout="@layout/top_layout"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="570px"
        android:background="@color/white"
        android:layout_marginTop="30px"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/user_info_headimg_liner"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_info_username"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="头像"
                android:layout_marginLeft="30px"
                android:textSize="36px"
                android:layout_gravity="center"
                android:textColor="@color/user_info_name"/>
            <com.xhwl.xhwlownerapp.UIUtils.CircleImageView
                android:id="@+id/user_info_headimg"
                android:layout_width="162px"
                android:layout_height="162px"
                android:layout_marginRight="36px"
                android:src="@drawable/headimg"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_submit"
                android:layout_marginRight="30px"
                android:layout_gravity="center"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/login_line"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/user_info_nikename_liner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="#2f2f2f"
                android:text="昵称"/>
            <TextView
                android:id="@+id/user_info_nikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="36px"
                android:textSize="29px"
                android:textColor="@color/info_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@drawable/right_submit"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/login_line"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/user_info_sex_liner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="#2f2f2f"
                android:text="性别"/>
            <TextView
                android:id="@+id/user_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="36px"
                android:textSize="29px"
                android:textColor="@color/info_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@drawable/right_submit"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/login_line"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/user_info_phone_liner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="#2f2f2f"
                android:text="手机号"/>
            <TextView
                android:id="@+id/user_info_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="36px"
                android:textSize="29px"
                android:textColor="@color/info_text"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/login_line"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:visibility="gone"
            android:id="@+id/user_info_qrcode_liner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:textColor="#2f2f2f"
                android:text="二维码"/>
            <ImageView
                android:layout_width="33px"
                android:layout_height="33px"
                android:layout_marginRight="36px"
                android:layout_gravity="center"
                android:background="@drawable/my_info_qrcode"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@drawable/right_submit"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/login_line"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/user_info_logout"
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/introduce_btn_bg"
            android:gravity="center"
            android:text="退出登录"
            android:textSize="30px"
            android:textColor="@color/white"/>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
